{
  "name": "@vistra/backend",
  "version": "1.0.0",
  "description": "Backend API for Vistra Document Management System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:create": "sequelize db:create",
    "migrate": "tsx src/migrations/cli.ts up",
    "migrate:down": "tsx src/migrations/cli.ts down",
    "migrate:down:all": "tsx src/migrations/cli.ts down-all",
    "migrate:status": "tsx src/migrations/cli.ts status",
    "seed": "tsx src/seeders/cli.ts seed",
    "seed:down": "tsx src/seeders/cli.ts unseed",
    "seed:down:all": "tsx src/seeders/cli.ts unseed:all",
    "seed:status": "tsx src/seeders/cli.ts status"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.0",
    "sequelize": "^6.37.6",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.25",
    "@types/sequelize": "^4.28.20",
    "@types/umzug": "^2.3.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "umzug": "^3.8.2"
  }
}
